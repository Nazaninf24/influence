<nav class="login-form mt-5">
  <div class="container">
      <div class="row justify-content-center">
          <div class="col-md-8">
              <div class="card">
                    <div class="card-header bg-primary"><h4 class="text-white text-center">Modifier mon compte</h4></div>
                  <div class="card-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <%= f.label :email, class: "col-md-4 col-form-label text-md-right" %>
    <div class="col-md-6">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>
</div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group row">
    <%= f.label :nouveau_mot_de_passe, class: "col-md-4 col-form-label text-md-right" %> 
    <div class="col-md-6">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em>(laisser vide pour ne pas le modifier) <br> <%= @minimum_password_length %> charactères minimum</em>
    <% end %>
  </div>
</div>

<div class="form-group row">
    <%= f.label :Confirmer_mot_de_passe, class: "col-md-4 col-form-label text-md-right" %>
    <div class="col-md-6">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>
</div>

<div class="form-group row">
    <%= f.label :mot_de_passe_actuel, class: "col-md-4 col-form-label text-md-right" %> 
    <div class="col-md-6">
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    <em>(pour confirmer vos modifications)</em>
  </div>
</div>

<div class="col-md-6 offset-md-4">
    <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
  </div>
<% end %>
<br><br><br>
<h4 class="text-center">Supprimer mon compte</h4>
<br>

<div class="col-md-6 offset-md-4">
  <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr ?" }, method: :delete, class: "btn btn-danger" %>
</div>

<%= link_to "Retour", :back %>
