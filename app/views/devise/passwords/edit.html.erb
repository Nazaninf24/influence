<nav class="login-form mt-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header bg-primary">
            <h4 class="text-white text-center">Changement de mot de passe</h4>
          </div>
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>
              <div class="form-group row">
                <%= f.label :password, "Nouveau mot de passe" %>
                <div class="col-md-6">
                  <%= f.password_field :password, autofocus: true, autocomplete: "nouveau-mot-de-passe" %>
                </div>
              </div>
              <div class="form-group row">
                <%= f.label :password_confirmation, "Confirmation du nouveau mot de passe" %>
                <div class="col-md-6">
                  <%= f.password_field :password_confirmation, autocomplete: "confirmation" %>
                </div>
              </div>
              <div class="col-md-6 offset-md-4">
                <%= f.submit "Changer mon mot de passe", class: "btn btn-primary" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>