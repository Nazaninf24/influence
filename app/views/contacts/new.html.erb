<div class="container mt-4 mb-4">
      <div class="row justify-content-center">
          <div class="col-md-8">
              <div class="card my-4">
                <div class="card-header bg-primary"><h4 class="text-white text-center">Contactez nous</h4></div>
                  <div class="card-body">
                  <%= form_for @contact do |f| %>
                    <div class="form-group row mt-4">
                      <%= f.label 'Nom', class:'col-md-4 col-form-label text-md-right' %></br>
                      <div class="col-md-6">
                     <%= f.text_field  :name, required: true, class: "form-control" %></br>
                </div>
                </div>
        <div class="form-group row">
        <%= f.label :email, class:'col-md-4 col-form-label text-md-right' %></br>
        <div class="col-md-6">
        <%= f.text_field :email, required: true, class: "form-control" %></br>
         </div>
        </div>
        <br>
        <div class="form-group row">
        <%= f.label :message, class:'col-md-4 col-form-label text-md-right' %></br>
        <div class="col-md-6">
        <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "form-control" %>
                        </div>
                        </div>
        <br>
      <div class= "hidden">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'leave this field blank !' %>
      </div>
      <div class="col-md-6 offset-md-4">
        <%= f.submit 'Envoi du message', class: 'btn btn-primary mx-5' %>
    </div>
    </div>  
<% end %>

</div>
</div>
</div>
</div>
</div>
</div>

