  <%= render "layouts/header" %>
  <% flash.each do |type, msg| %>
    <% case type %>
      <% when 'success' %>
        <div class="alert alert-dismissible alert-success ml-1 mr-1 mt-2">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= msg %>
        </div>
      <% when 'alert' %>
        <div class="alert alert-dismissible alert-danger ml-1 mr-1 mt-2">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= msg %>
        </div>
      <% when 'notice' %>
        <div class="alert alert-dismissible alert-info">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= msg %>
        </div>
    <% end %>
  <% end %>
