<div class="container mt-5">
  <div class="card flex-row mb-5 " style="height:20rem;">
    <% if @advert.avatar.attached? %>
      <%= image_tag @advert.avatar, alt: 'avatar',style:"width:20rem;height:20rem;"%>
    <% else %>
      <img style="width:20rem;height:20rem;"src="<%= @advert.picture %>" alt="">
    <% end %>
    
    <div class="block d-flex" style="width:100%;">
      <div class="sub-block d-flex flex-column justify-content-between pl-4" style="width:70%;">
        <div class="card-block pt-4" style="width:100%;">
          <h3 class="card-title"><%= @advert.user.first_name %> <%= @advert.user.last_name %></h3>
          
          <h5 class="card-text"><%= @advert.tag %></h5>
        
        <p>Description : </p>
        <p class="card-text"><%= @advert.description %></p>
        
        <span class="badge badge-pill badge-primary"><%=@advert.price %>€ / jour indicatif</span>
        
          <p class="card-text mt-3 font-weight-bold"> Lien : <a href ="<%= @advert.link_field %>"><%= @advert.link_field %></a></p>
          </div>
        </div>
      </div>
        <div class="sub-block d-flex flex-column align-items-center justify-content-center" style="width:40%;">
          <% if current_user == nil %>
          <%= link_to "Contacter #{@advert.user.first_name}", new_user_session_path, class: "btn btn-primary" %>
          <% elsif current_user != nil && current_user.id == @advert.user_id %>

          <div class="row">
          <div class="col-md">
         <%= link_to 'Modifier cette anonce', edit_advert_path, class: "btn btn-primary btn-sm" %>
         </div>
        <div class="col-md">
        <%= link_to "Supprimer l'annonce", advert_path(@advert.id), method: :delete, class: "btn btn-outline-primary btn-sm mx-2" %>
        </div>

        <div class="col-md">
       <%= link_to 'Retourner à annonces', adverts_path, class: 'btn btn-primary btn-sm' %>
       </div>
       </div>
       </div>
          </div>
        <% elsif current_user != nil && current_user.user_type == 'influencer' %>
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Inviter <%= @advert.user.first_name %>
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <% current_user.projects.each do |project| %>
            
              <%= link_to "Sur #{project.title}", project_adverts_projects_join_index_path(@advert.id,project.id), method: :post, class: "dropdown-item" %>
            
          <% end %>
        <% end %>
      </div>
        
        </div>
      </div>
  </div>
</div>

