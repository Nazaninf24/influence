    <legend><h2>Créer un nouveau Profil.</h2></legend>
  
  <% if @errors %>
    <% @errors.messages.each do |message| %>
    <div class="alert alert-danger" role="alert">
    Le champ <%= message[0] %> a le problème suivant: <%= message[1][0] %>
    </div>
      <% end %>
    <% end %>

    <%= form_tag url_for(action: 'create'), method: "post" do %>
    <%= label_tag 'Titre' %>
    <%= text_field_tag 'title' %>
    <br> <br>

    <%= label_tag 'Métier' %>
    <%= text_area_tag 'tag' %>
    <br><br>
  
    <%= label_tag 'Description' %>
    <%= text_area_tag 'description' %>
    <br><br>

    <%= label_tag 'Taux journalier :' %>
    <%= text_area_tag 'price' %>
    <br><br>

    <%= label_tag 'Liens divers (Linkdin, CV, portfolio...)' %>
    <%= text_area_tag 'link_field' %>
    <br><br>

    <%= hidden_field_tag 'user_id', current_user.id %>
    
    <%= submit_tag("Créer le profil", class: "btn btn-primary") %>
  
    <% end %>