
<h1 class="text-center" style="margin-top: 2rem;">Freelances disponibles</h1>
<br>
<div class="container">
  <div class="row">
    <% @adverts.each do |advert|%>
      <div class="col-md-4 d-flex text-center">
      <div class="card mb-4" style="width:20rem;">
      <h4 class="card-header bg-primary text-white"><%= advert.user.first_name %> <%= advert.user.last_name %></h4>
        <% if advert.avatar.attached? %>
          <%= image_tag advert.avatar, alt:'avatar',style:"height: auto; width: 100%; display: block;"%>
        <% else %> 
          <img style="height: auto; width: 100%; display: block;" src="<%= advert.picture  =%>" alt="Card image">
        <% end %>
        <div class="card-body text-center" style="border-top:1px solid lightgrey;">
          <h5 class="card-text"><%=advert.tag %></h5>
          <div class="card-body text-center">
          <div class="price-container" style="display:flex; align-items:center; width:52%; height:5vh; border:1px solid lightgrey; border-radius:20px; padding-left:10px;">
            <div class="circle bg-primary text-center" style="width:10px;height:10px;border:1px solid black;border-radius:90px;" ></div>
            <p style="margin-bottom:0;"><span class="font-weight-bold"><%=advert.price %>â‚¬</span><small class="text-muted">/ jour indicatif</small></p>
          </div>
          </div>
          <a href="<%= advert_path(advert.id) %>" class="btn btn-primary">Profil complet</a>
        </div>
      </div>  
    </div>
    <%end%>
  </div>
</div>