<form>
  <fieldset>
    <legend>Modifier le projet</legend>
    
    <div class="form-group">
      <label for="exampleInputEmail1">Titre du projet</label>
      <input type="text" class="form-control" id="title" aria-describedby="title" placeholder="Projet de scrapping nhentai">  
    </div>
    
    
    <div class="form-group">
      <label for="exampleTextarea">Description du projet</label>
      <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
    </div>
    <div class="form-group">
      <label for="exampleInputFile">Image</label>
      <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
      <small id="fileHelp" class="form-text text-muted">Veuillez sélectionner une image pour représenter votre projet</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>