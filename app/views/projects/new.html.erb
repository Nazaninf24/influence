<form>
  <fieldset style="padding: 2em;">
    <legend>  <h2>Créer un nouveau projet.</h2></legend>
  
  <% if @errors%>
    <% @errors.messages.each do |message|%>
    <div class="alert alert-danger" role="alert">
    Le champ <%= message[0] %> a le problème suivant: <%= message[1][0] %>
    </div>
      <% end%>
    <% end %>
  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <%= label_tag 'Titre' %>
    <%= text_field_tag 'title' %>
    <br /> <br />
  
    <%= label_tag 'Description' %>
    <%= text_area_tag 'description' %>
    <br><br>
    <div class="form-group">
      <label for="exampleInputFile">Image</label>
      <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
      <small id="fileHelp" class="form-text text-muted">Veuillez sélectionner une image pour représenter votre projet</small>
    </div><br>
    <%= submit_tag "Créer le projet", class: "btn btn-primary", method: :create %>
  
    <% end %>
    </div>
    
</form>


<div class="text-center mt-5">
  